{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			// Publishes the mod to Thunderstore
			"label": "dotnet: publish",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"publish",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": []
		},
		{
			// Performs Thunderstore CLI dry-run
			"label": "tcli: Dry-run package test",
			"type": "shell",
			"command": "dotnet tool run tcli build --config-path ./ThunderstorePackage/thunderstore.toml",
			"problemMatcher": []
		},
		{
			// Adds a git submodule to the project
			"label": "dotnet: Add reference (git submodule)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"msbuild",
				"-t:Thunderstore Packager\\ThunderstorePackager:AddGitSubmodule",
				"-p:GitSubmoduleUrl=${input:gitSubmoduleUrl}",
				"-p:GitSubmoduleDirName=${input:gitSubmoduleDirName}",
				"-p:GitSubmoduleProjRefType=${input:gitSubmoduleProjRefType}"
			],
			"problemMatcher": "$msCompile"
		},
		{
			// Removes a git submodule from the project
			"label": "dotnet: Remove reference (git submodule)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"msbuild",
				"-t:Thunderstore Packager\\ThunderstorePackager:RemoveGitSubmodule",
				"-p:GitSubmoduleDirName=${input:gitSubmoduleDirName}",
				"-p:GitSubmoduleProjRefType=${input:gitSubmoduleProjRefType}"
			],
			"problemMatcher": "$msCompile"
		},
		{
			// Adds a Thunderstore package to the project
			"label": "dotnet: Add reference (Thunderstore package)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"msbuild",
				"-t:Thunderstore Packager\\ThunderstorePackager:AddThunderstorePackage",
				"-p:ThunderstorePackageName=${input:thunderstorePackageName}",
				"-p:ThunderstorePackageVersion=${input:thunderstorePackageVersion}",
			],
			"problemMatcher": "$msCompile"
		},
		{
			// Removes a Thunderstore package from the project
			"label": "dotnet: Remove reference (Thunderstore package)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"msbuild",
				"-t:Thunderstore Packager\\ThunderstorePackager:RemoveThunderstorePackage",
				"-p:ThunderstorePackageName=${input:thunderstorePackageName}"
			],
			"problemMatcher": "$msCompile"
		},
		{
			// Adds a Thunderstore package to the project
			"label": "dotnet: Add reference (NuGet package)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"msbuild",
				"-t:Thunderstore Packager\\ThunderstorePackager:AddNuGetPackage",
				"-p:NuGetPackageName=${input:nugetPackageName}",
				"-p:NuGetPackageVersion=${input:nugetPackageVersion}",
			],
			"problemMatcher": "$msCompile"
		},
		{
			// Removes a Thunderstore package from the project
			"label": "dotnet: Remove reference (NuGet package)",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"msbuild",
				"-t:Thunderstore Packager\\ThunderstorePackager:RemoveNuGetPackage",
				"-p:NuGetPackageName=${input:nugetPackageName}"
			],
			"problemMatcher": "$msCompile"
		},
		{
			// Configure dotnet build as the default build task
			"type": "dotnet",
			"task": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"label": "dotnet: build"
		}
	],
	"inputs": [
		// Inputs for task dotnet: Add/Remove reference (git submodule)
		{
			"id": "gitSubmoduleUrl",
			"type": "promptString",
			"description": "Enter the Git submodule URL"
		},
		{
			"id": "gitSubmoduleDirName",
			"type": "promptString",
			"description": "Enter the submodule directory name"
		},
		{
			"id": "gitSubmoduleProjRefType",
			"type": "pickString",
			"description": "Select the project reference type",
			"options": [
				"src",
				"lib"
			],
			"default": "src"
		},
		// Inputs for task dotnet: Add/Remove reference (NuGet package)
		{
			"id": "nugetPackageName",
			"type": "promptString",
			"description": "Enter the NuGet package name"
		},
		{
			"id": "nugetPackageVersion",
			"type": "promptString",
			"description": "Enter the NuGet package version"
		},
		// Inputs for task dotnet: Add/Remove reference (Thunderstore package)
		{
			"id": "thunderstorePackageName",
			"type": "promptString",
			"description": "Enter the Thunderstore package name"
		},
		{
			"id": "thunderstorePackageVersion",
			"type": "promptString",
			"description": "Enter the Thunderstore package version"
		}
	]
}
